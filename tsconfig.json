{
  "compilerOptions": {
    "target": "es2016",                                  
    "module": "commonjs",                               
    "baseUrl": "./src",                                
    "paths": {
      "@modules/*": [
        "modules/*"
      ],
      "@config/*": [
        "config/*"
      ],
      "@shared/*": [
        "shared/*"
      ],
      "@errors/*": [
        "errors/*"
      ],
      "@utils/*": [
        "utils/*"
      ]
    },                                     
    "resolveJsonModule": true,                      
    "outDir": ".dist",                                  
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                      
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true                                
  }
}
